<com.firebase.rawr.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.firebase.rawr.RawrActivity"
    android:id="@+id/contactList">

    <LinearLayout
        android:orientation="vertical"
        style="?android:attr/buttonStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:gravity="top|center_horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:src="@drawable/dino1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userJohn"
        android:orientation="vertical"
        style="?android:attr/buttonStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:gravity="top|center_horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:src="@drawable/dino4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userMary"
        android:orientation="vertical"
        style="?android:attr/buttonStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:gravity="top|center_horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:src="@drawable/dino2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mary"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/addUserButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:gravity="center|center_vertical"
        android:text="+"
        android:textSize="100dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:gravity="center|center_vertical"
        android:text="X"
        android:textSize="100dp" />

</com.firebase.rawr.FlowLayout>
